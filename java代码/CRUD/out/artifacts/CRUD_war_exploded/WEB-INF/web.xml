<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--   ListServlet-->
    <servlet>
        <servlet-name>List</servlet-name>
        <servlet-class>Servlets.ListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>List</servlet-name>
        <url-pattern>/dept/list</url-pattern>
    </servlet-mapping>

<!--   DetailServlet -->
    <servlet>
        <servlet-name>det</servlet-name>
        <servlet-class>Servlets.DetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>det</servlet-name>
        <url-pattern>/dept/detail</url-pattern>
    </servlet-mapping>
    
<!--    DeleteServlet-->
    <servlet>
        <servlet-name>del</servlet-name>
        <servlet-class>Servlets.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>del</servlet-name>
        <url-pattern>/dept/delete</url-pattern>
    </servlet-mapping>

<!--    AddServlet-->
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>Servlets.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/dept/add</url-pattern>
    </servlet-mapping>
  
    
    
<!--    EditServlet-->
    <servlet>
        <servlet-name>edit</servlet-name>
        <servlet-class>Servlets.EditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>edit</servlet-name>
        <url-pattern>/dept/edit</url-pattern>
    </servlet-mapping>
    
<!--    DoEditServlet-->
    <servlet>
        <servlet-name>doEdit</servlet-name>
        <servlet-class>Servlets.DoEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>doEdit</servlet-name>
        <url-pattern>/dept/doEdit</url-pattern>
    </servlet-mapping>
</web-app>


    